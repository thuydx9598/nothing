@using AnzamtechWS.Areas.Admin.Models
@model GiaiPhap
@{
    ViewBag.Title = Model.TenGP;
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
    var listHA = Model.DanhMucAnh.Anhs.Where(u => u.LoaiAnh.TenLoai.Contains("Ảnh đại diện sản phẩm"));
}
@section MetaSeoTag{
    <meta name="description" content="@Model.TenGP" />
    <meta property="og:title" content="@Model.TenGP" />
    <meta property="og:image" content="@((listHA.Count() > 0)?("http://" + Request.Url.Host + listHA.ElementAt<Anh>(0).Path + "/" + listHA.ElementAt<Anh>(0).TenAnh):"")" />
}
@Html.Raw(Server.HtmlDecode(Model.NoiDung))
<script>
    loadCSS("/Content/User/software.css");
</script>
<script src="/Scripts/User/partical.js">

</script>
<script>
    $(document).ready(function () {
        particlesJS.load('particles-js', '/Scripts/User/paritcals.json', function () {
            console.log('callback - particles.js config loaded');
        });
    });
</script>