@using AnzamtechWS.Areas.Admin.Models
@{ 
    Layout = "/Areas/User/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Liên hệ";
}
@{ QuanLyTrangModel qltrang = new QuanLyTrangModel(); }
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="row bg-light pt-3 pb-3 mb-4">
          
                <div class="col-lg-4 col-4">
                    <h6>Địa chỉ: </h6>
                    @qltrang.DiaChiCty
                </div>
                <div class="col-lg-4 col-4">
                    <p>Điện thoại công ty</p>
                    <p class="m-0 text-success">
                        <i class="fa fa-phone-square" aria-hidden="true"></i>
                       @qltrang.DTCoDinh
                    </p>
                    <p class="m-0 text-success">
                        <i class="fa fa-phone-square" aria-hidden="true"></i>
                        @qltrang.DTDiDong
                    </p>
                    <p class="m-0 text-info">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        @qltrang.EmailCty
                    </p>
                     <p class="mt-2">Nhân viên sale</p>
                    <p class="m-0 text-danger">
                        <i class="fa fa-phone-square" aria-hidden="true"></i>
                        @qltrang.DTNVSale
                    </p>
                    <p class="m-0 text-info">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        @qltrang.EmailSale
                    </p>
                   
                </div>
               
                <div class="col-lg-4 col-4">
                    <p>Nhân viên kỹ thuật</p>
                    <p class="m-0 text-primary">
                        <i class="fa fa-phone-square" aria-hidden="true"></i>
                        @qltrang.DTNNKyThuat
                    </p>
                    <p class="m-0 text-info">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        @qltrang.EmailKyThuat
                    </p>
                </div>
            </div>
            <div class="row bg-light pt-3 pb-3 mb-4">
                <div class="col-lg-4 col-12">
                    <form>
                        <h5 class="mb-4 d-flex flex-column">Thông tin khách hàng
                        <small class="small text-muted mt-1">Chúng tôi sẽ liện hệ với bạn sớm nhất có thể.</small></h5>
                        
                        <div class="form-group mb-3">
                          
                                <input type="text" class="form-control " placeholder="Họ tên">
                        </div>
                        <div class="form-group mb-3">
                                <input type="text" class="form-control" placeholder="Email">
 
                        </div>
                        <div class="form-group mb-3">
                                <input type="text" class="form-control" placeholder="Số điện thoại">
            
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Nội dung"></textarea>
                        </div>
                        <button type="submit" class="btn btn-danger mb-4">Gửi</button>
                    </form>
                </div>
                <div class="col-lg-8 col-12">
                    <div style="width: 100%"><iframe width="100%" height="500px"src="@qltrang.ViTri" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"><a href="https://www.mapsdirections.info/en/custom-google-maps/">Create Google Map</a> by <a href="https://www.mapsdirections.info/en/">Measure area on map</a></iframe></div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
