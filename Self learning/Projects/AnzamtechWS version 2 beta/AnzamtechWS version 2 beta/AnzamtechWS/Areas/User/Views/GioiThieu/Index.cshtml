@{
    Layout = "/Areas/User/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Giới thiệu";
}
@section ScrollView{
     sr.reveal('.box', { duration: 1000 });
     sr.reveal('.timeline-content:nth-child(odd)', {
                origin: 'left',
                duration: 500
            });
     sr.reveal('.timeline-time:nth-child(odd)', {
                origin: 'right',
                duration: 500
            });
    sr.reveal('.timeline-content:nth-child(even)', {
                origin: 'right',
                duration: 500
            });
     sr.reveal('.timeline-time:nth-child(even)', {
                origin: 'left',
                duration: 500
            });
     sr.reveal('.work-process-box', { duration: 1000 });
    }
