@using AnzamtechWS.Areas.Admin.Models
@using AnzamtechWS.Helper
<!doctype html>
<html>
<head>
    <style>
        .baner-image > .lazy{
    width:60px;
    height: 60px;
}
img.lazy {
    position:relative;
    display:block;
    border: 4px solid #f3f3f3;
    border-radius: 50%;
    -webkit-border-radius: 50%;
    border-top: 4px solid #3498db;
    width: 40%;
    height: 40%;
    -webkit-animation: spin 2s linear infinite;
    animation: spin 2s linear infinite;
}

.loaded > .lazy, .loaded > .lazy{
    border: none !important;
    border-radius: 0 !important;
    -webkit-border-radius: 0 !important;
    animation: none !important;
    -webkit-animation: none!important;
    width: inherit !important;
    height: inherit !important;
}
    @Html.Raw("@-webkit-keyframes") spin {
        0 % {
                    -webkit-transform: rotate(0deg);
                }

                100% {
                    -webkit-transform: rotate(360deg);
                }
            }

            @Html.Raw("@keyframes") spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
    }
    }

    .baner-image.loaded{
        min-height: unset !important;
    }
.container-image, .baner-image {
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center
}
          .feature-product .card .container-image {
        width:160px;
        height: 160px;
    }
.img-size-logo{
    width:60px !important;
    height:60px;
}
.img-size-prealated{
    width:80px;
    height: 80px;
}
.img-size-news{
    width:750px;
    height:300px;
}
.baner-image{
    width: 100%;
    min-height:300px;
}
.list-solution-image{
    width: 200px;
    height: 200px;
}
.solution-image{
    min-height: 200px
}
.pop-solution.loaded > img.lazy {
    width: 200px !important;
    height: 200px !important;
    border-radius: 50% !important;
    border-style: outset !important;
    border-color: #888888 !important;
    border-width: 3px;
    padding: 1px;
}
    </style>
    @{ QuanLyTrangModel qlTrang = new QuanLyTrangModel();}
    <meta charset="utf-8">
    @if (IsSectionDefined("MetaSeoTag"))
    {
        @RenderSection("MetaSeoTag")
    }
    else
    {
        <meta name="description" content="@qlTrang.MoTaCongTy" />
    }
    <meta name="viewport" content="width:device-width" />
    <meta name="robots" content="noodp,index,follow" />
    <meta name='revisit-after' content='1 days' />
    <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="geo.region" content="VN" />
    <meta name="geo.placename" content="Hồ Ch&iacute; Minh" />
    <meta name="geo.position" content="10.867674;106.79357" />
    <meta name="ICBM" content="10.867674, 106.79357" />
    <title>@((ViewBag.Title == "") ? "" : (ViewBag.Title + " - "))ANZ AMTECH JSC</title>
    @Scripts.Render("~/bundle/jquery")
    <script>
        // loadCSS
        function loadCSS(e,t,n){"use strict";var i=window.document.createElement("link");var o=t||window.document.getElementsByTagName("script")[0];i.rel="stylesheet";i.href=e;i.media="only x";o.parentNode.insertBefore(i,o);setTimeout(function(){i.media=n||"all"})}
        loadCSS("@Styles.Url("~/style/share")");
    </script>

</head>

<body>
    <header class="main-header">
        <nav class="navbar header01">
            <div class="container">
                <div class="col-8 col-sm-8">
                    <ul class="list-inline mt-2 mb-2">
                        <li class="list-inline-item m-0"> <a href="@qlTrang.LinkFB" style="color: #3b5998;"><i class="fa fa-facebook fa-2x fa-fw"></i></a> </li>
                        <li class="list-inline-item m-0"> <a href="@qlTrang.LinkTweeter" style="color: #00aced;"> <i class="fa fa-twitter-square fa-2x fa-fw"></i> </a> </li>
                        <li class="list-inline-item m-0"> <a href="@qlTrang.LinkInstagram" style="color: #517fa4;"> <i class="fa fa-instagram fa-2x fa-fw"></i> </a> </li>
                        <li class="list-inline-item m-0"> <a href="@qlTrang.LinkGPlus" style="color: #dd4b39"> <i class="fa fa-google-plus fa-2x fa-fw"></i> </a> </li>
                    </ul>
                </div>
                <div class="col-4 d-none d-sm-block">
                    <ul class="tool-user list-inline mt-3 mb-3 float-right">
                        <li class="list-inline-item m-0"> <a href="#"><i class="fa fa-user-circle fa-2x fa-fw"></i></a> </li>
                        <li class="list-inline-item m-0"> <a href="#"><i class="fa fa-search fa-2x fa-fw"></i></a> </li>
                    </ul>
                </div>
            </div>
        </nav>
        <nav class="navbar header02 pt-0 pb-0">
            <div class="container">
                <div class="col-auto d-block d-lg-none">
                    <ul class="main-menu-mobile list-inline">
                        <li> <a class="nav-link"> <span class="menu-icon-bars"> <span class="menu-icon-bar"></span> <span class="menu-icon-bar"></span> <span class="menu-icon-bar"></span> </span> </a> </li>
                    </ul>
                </div>
                @{ var logo = qlTrang.DMALogo.Anhs.Take<Anh>(1);}
                <div class="col-9 col-sm-10 col-md-10 d-block d-lg-none p-0">
                    <div class="d-flex justify-content-end">
                        <h1 class="logo"> <span class="align-middle"><a href="/" style="justify-content:flex-end" class="container-image img-size-logo"><img class="lazy" data-src="@((logo != null && logo.Count() > 0)?(logo.ElementAt<Anh>(0).Path + "/" + logo.ElementAt<Anh>(0).TenAnh) :"") " src="~/image/pixel.gif" /></a></span> </h1>
                    </div>
                </div>
                <div class="col-2 d-none d-lg-block">
                    <h1 class="logo"> <span class="align-middle"><a href="/" style="justify-content:flex-start" class="container-image img-size-logo"><img class="lazy" data-src="@((logo != null && logo.Count() > 0)?(logo.ElementAt<Anh>(0).Path + "/" + logo.ElementAt<Anh>(0).TenAnh) :"") " src="~/image/pixel.gif" /></a></span> </h1>
                </div>
                <div id="menu-container" class="col-8 d-none d-lg-block">
                    <ul class="main-menu-desktop float-right list-inline main-nav-bar">
                        <li class="@((ViewBag.Title == "")?"active":"")"> <a href="/"> Trang chủ </a> </li>
                        <li class="main-menu-desktop-dropdown" id="mSanPham">
                            <a href="javascript:void(0)"> Sản phẩm </a>

                        </li>

                        <li class="@((ViewBag.Title == "Tin tức")?"active":"")"> <a href="/TinTuc">Tin tức </a> </li>
                        <li class="@((ViewBag.Title == "Giới thiệu")?"active":"")"> <a href="/GioiThieu">Giới thiệu</a> </li>
                        <li class="@((ViewBag.Title == "Liên hệ")?"active":"")"> <a href="/LienHe">Liên hệ </a> </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="mobile-menu" style="display: none">
            <form class="navbar-search-form" role="search">
                <div class="input-group add-on">
                    <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                    <div class="input-group-btn">
                        <button class="btn btn-primary" type="submit"><i class="fa fa-search fa-2x fa-fw"></i></button>
                    </div>
                </div>
            </form>
            <ul class="navbar-nav" style="display: block;">
                <li class="nav-item"> <a class="nav-link" href="/">Trang chủ</a> </li>
                <li class="nav-item nav-menu-item has-dropdown-menu">
                    <a href="javascript:void(0)" class="nav-link">Sản phẩm</a>
                    <ul class="dropdown-menu sub1 p-0 m-0">
                        @{
                            DanhMucModel modelDM = new DanhMucModel();
                            var list = modelDM.GetDSDanhMuc();

                        }
                        @if (list != null)
                        {
                            foreach (var item in list)
                            {
                                string path = "/" + Helper.ConvertVN(item.TenDanhMuc).Replace(' ', '-') + "-" + item.MaDM;
                                <li class="nav-item has-dropdown-menu">
                                    <a href="javascript:void(0)" class="nav-link">@item.TenDanhMuc</a>
                                    @if (item.PageController == null)
                                    {
                                        var listdmc = item.DanhMucCons.Take(6);
                                        <ul class="dropdown-menu sub2  p-0 m-0">

                                            @if (listdmc != null)
                                            {
                                                foreach (var dmc in listdmc)
                                                {
                                                    <li class="nav-item"> <a href="@path/@Html.Raw(Helper.ConvertVN(dmc.TenDMC.ToLower()).Replace(' ', '-') + "-" + dmc.MaDMC)" class="nav-link">@dmc.TenDMC</a> </li>
                                                }
                                            }

                                        </ul>
                                    }
                                    else
                                    {
                                        <ul class="dropdown-menu sub2  p-0 m-0">
                                            @{
                                                GiaiPhapModel modelGP = new GiaiPhapModel()
                                                {
                                                    MaDM = item.MaDM
                                                };
                                                var listGP = modelGP.GetListGPByMaDM(6);
                                            }

                                            @if (listGP != null)
                                            {
                                                foreach (var gp in listGP)
                                                {
                                                    <li class="nav-item"> <a href="/GiaiPhap/@item.PageController/@Html.Raw(Helper.ConvertVN(gp.TenGP).Replace(' ', '-') + "-" + gp.MaGP)" class="nav-link">@gp.TenGP</a> </li>
                                                }
                                            }
                                        </ul>
                                    }
                                </li>
                            }
                        }
                    </ul>
                </li>
                <li class="nav-item"> <a class="nav-link" href="/TinTuc">Tin tức</a> </li>
                <li class="nav-item"> <a class="nav-link" href="/GioiThieu">Giới thiệu</a> </li>
                <li class="nav-item"> <a class="nav-link" href="/LienHe">Liên hệ</a> </li>
            </ul>
        </div>
        <div class="mega-menu" style="display:none">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-2"> </div>
                    <div class="col-8">
                        <div class="row">
                            @if (list != null)
                            {
                                list = list.Take(3);
                                foreach (var item in list)
                                {
                                    string path = "/" + Helper.ConvertVN(item.TenDanhMuc).Replace(' ', '-') + "-" + item.MaDM;
                                    <div class="col-4 mega-menu-border">
                                        <div class="d-flex flex-column">


                                            @if (item.PageController == null)
                                            {
                                                <div class="mega-title"><a class="nav-link" href="@path">@item.TenDanhMuc</a></div>
                                                var listdmc = item.DanhMucCons.Take(6);

                                                if (listdmc != null)
                                                {
                                                    foreach (var dmc in listdmc)
                                                    {
                                                        <div class="mega-item"> <a href="@path/@Html.Raw(Helper.ConvertVN(dmc.TenDMC.ToLower()).Replace(' ', '-') + "-" + dmc.MaDMC)" class="nav-link">@dmc.TenDMC</a> </div>
                                                    }
                                                }
                                            }
                                            else
                                            {
                                                <div class="mega-title"><a class="nav-link" href="/GiaiPhap/@item.PageController">@item.TenDanhMuc</a></div>
                                                GiaiPhapModel modelGP = new GiaiPhapModel()
                                                {
                                                    MaDM = item.MaDM
                                                };
                                                var listGP = modelGP.GetListGPByMaDM(6);
                                                if (listGP != null)
                                                {
                                                    foreach (var gp in listGP)
                                                    {
                                                        <div class="mega-item"> <a href="/GiaiPhap/@item.PageController/@Html.Raw(Helper.ConvertVN(gp.TenGP).Replace(' ', '-') + "-" + gp.MaGP)" class="nav-link">@gp.TenGP</a> </div>
                                                    }
                                                }
                                            }

                                        </div>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
        </div>
    </header>
    <section>
        @RenderBody()
    </section>
    <footer id="myFooter">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <h5>Danh mục</h5>
                    <ul>
                        <li><a href="/">Trang chủ</a></li>
                        <li><a href="/DangKy">Đăng ký</a></li>
                        <li><a href="/DangNhap">Đăng nhập</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Thông tin về chúng tôi</h5>
                    <ul>
                        <li><a href="/GioiThieu">Thông tin công ty</a></li>
                        <li><a href="/LienHe">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                </div>
                <div class="col-sm-3 info">
                    <h5>Mô tả về công ty</h5>
                    <p>@qlTrang.MoTaCongTy</p>
                </div>
            </div>
        </div>
        <div class="second-bar">
            <div class="container">

                <div class="row mb-0 mr-2 ml-2">
                    <h6 class="d-flex align-self-center">Copyright ANZ AMTECH JSC</h6>
                    <div class="social-icon align-self-center" style="margin-left:auto">
                        <a href="@qlTrang.LinkTweeter" class="twitter"><i class="fa fa-twitter"></i></a>
                        <a href="@qlTrang.LinkFB" class="facebook"><i class="fa fa-facebook"></i></a>
                        <a href="@qlTrang.LinkGPlus" class="google"><i class="fa fa-google-plus"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" async></script>", "~/bundle/share")
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" async></script>", "~/bundle/user")
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"https://unpkg.com/scrollreveal/dist/scrollreveal.min.js\"></script>", "~/bundle/user")
    <script>
           loadCSS("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css");
           loadCSS("@Styles.Url("~/style/user")");
    </script>
    @RenderSection("ScriptView", false)
    <script>
        $(document).ready(function () {
            window.sr = ScrollReveal({ reset: true });
            sr.reveal('.navbar:nth-child(1)', {
                origin: 'left',
                duration: 500
            });
            sr.reveal('.navbar:nth-child(2)', {
                origin: 'right',
                duration: 500
            });
            sr.reveal('.sr-fade', { duration: 1000 });
            sr.reveal('.card', {
                origin: 'left',
                duration: 500
            });
            @RenderSection("ScrollView", false);
        })


    </script>

</body>
</html>
