@using AnzamtechWS.Areas.Admin.Models
@model DanhMucBaiVietModel
@{
    ViewBag.Title = "Thêm danh mục bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="block-header">
    <ol class="breadcrumb breadcrumb-arrow">
        <li><a href="/Admin/Home">Trang chủ</a></li>
        <li><a href="/Admin/BaiViet">Bài viết</a></li>
        <li class="active"><span>Thêm danh mục bài viết</span></li>
    </ol>
</div>
@Html.Raw(Model.GetHTMLMessage())
<div class="form-content col-lg-12 col-md-12 col-sm-12 col-xs-12 pl-0 pr-0">
    <div class="card">
        <div class="header">
            <h2>
                Thêm danh mục bài viết
            </h2>
        </div>
        <div class="body">
            @using (Html.BeginForm(new { area = "Admin", controller = "BaiViet", action = "ThemDanhMucBV" }))
            {

                <h2 class="card-inside-title">Tên danh mục</h2>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.TextBoxFor(u => u.TenDanhMuc, Model.TenDanhMuc, new { @class = "form-control" })

                        </div>
                    </div>
                </div>
                <button class="btn btn-primary">Thêm</button>
            }
        </div>
    </div>
</div>

