            @if (Model.Count > 0)
            {
                foreach (string str in Model)
                {
                    try
                    {
                        string[] content = str.Split('\n');
                        string[] temp = content[0].Split('-');
                        string _title = temp[0];
                        string _author = temp[1];
                        string _date = temp[2];

                        string _link = content[content.Length-1];

                        <div class="c-m-12 pl-3 pr-3">
                            <div class="blog-box d-m-f">
                                <div class="blog-content">
                                    <h5>
                                        <a>@_title</a>
